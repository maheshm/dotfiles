# bundle install in vendor
# taken from : http://ryan.mcgeary.org/2011/02/09/vendor-everything-still-applies/
alias b="bundle"
alias bu="b update"
alias be="b exec"

# Rails
alias r="rails"

# emacs
if [[ `uname` == 'Darwin' ]]
then
  alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
fi

alias ec="emacsclient -c"

# ping check
alias google="ping www.google.co.in"

# cat and copy the ssh public key, copy will fail in non-Mac
alias sshkey="cat ~/.ssh/id_rsa.pub | pbcopy; cat ~/.ssh/id_rsa.pub"

alias ag='command ag'
